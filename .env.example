# 剧本杀智能压缩系统环境变量配置示例

# ======================================
# 应用基础配置
# ======================================
APP_NAME=剧本杀智能压缩系统
APP_VERSION=2.1.0
DEBUG=false
API_HOST=0.0.0.0
API_PORT=9000
API_PREFIX=/api/v1
LOG_LEVEL=INFO
LOG_FILE=

# ======================================
# 安全配置
# ======================================
SECRET_KEY=your-secret-key-here-change-in-production
CORS_ORIGINS=["*"]

# ======================================
# 数据库配置
# ======================================

# NebulaGraph 配置
NEBULA_HOST=localhost
NEBULA_PORT=9669
NEBULA_USERNAME=root
NEBULA_PASSWORD=
NEBULA_SPACE_NAME=scripts

# Qdrant 向量数据库配置
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=script_embeddings

# ======================================
# 专用模型配置
# ======================================

# 专用压缩模型路径
MODEL_PATH=./models/specialized_compression_model.pth
MODEL_NAME=t5-large
MODEL_HIDDEN_SIZE=768
MODEL_MAX_LENGTH=2048

# 模型训练配置
TRAINING_BATCH_SIZE=4
TRAINING_LEARNING_RATE=1e-4
TRAINING_NUM_EPOCHS=50
TRAINING_WARMUP_STEPS=1000
USE_WANDB=false
WANDB_PROJECT=script-compression-model

# 备用LLM配置（用于对比测试）
# Google Gemini API 配置
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TEMPERATURE=0.7

# vLLM 本地模型配置
VLLM_HOST=localhost
VLLM_PORT=8000
VLLM_MODEL=Qwen/Qwen2.5-14B-Instruct

# ======================================
# 嵌入服务配置
# ======================================
EMBEDDING_HOST=localhost
EMBEDDING_PORT=8080
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DIMENSION=1024

# ======================================
# 专用压缩系统配置
# ======================================
DEFAULT_TARGET_HOURS=3
COMPRESSION_RATIO_MIN=0.3
COMPRESSION_RATIO_MAX=0.8
COMPRESSION_TIMEOUT=300

# 压缩策略默认配置
DEFAULT_COMPRESSION_LEVEL=medium
DEFAULT_COMPRESSION_STRATEGY=balanced
LOGIC_WEIGHT=0.3
STORY_WEIGHT=0.3
PLAYABILITY_WEIGHT=0.2
LENGTH_WEIGHT=0.2

# 模型推理配置
MODEL_MAX_BATCH_SIZE=2
MODEL_CACHE_SIZE=100
MODEL_CACHE_TTL=3600

# 保留的多智能体配置（兼容性）
MAX_ITERATIONS=5
AGENT_TIMEOUT=120
PARALLEL_AGENTS=false

# ======================================
# 性能配置
# ======================================
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=300

# ======================================
# Redis配置（可选，用于缓存）
# ======================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ======================================
# 监控配置（可选）
# ======================================
SENTRY_DSN=
PROMETHEUS_PORT=9090

# ======================================
# 开发环境特定配置
# ======================================
# 开发模式下的额外配置
DEV_RELOAD=true
DEV_LOG_LEVEL=DEBUG

# ======================================
# 生产环境特定配置
# ======================================
# 生产模式下的额外配置
PROD_WORKERS=4
PROD_LOG_LEVEL=WARNING
SSL_CERT_PATH=
SSL_KEY_PATH=